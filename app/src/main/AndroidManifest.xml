<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.edu.utfpr.arthursottile.doremix">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_doremix"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_doremix_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoReMix"
        tools:targetApi="31">
        <activity
            android:name=".SobreActivity"
            android:exported="false" />
        <!-- Activity da ENT2: lista de músicas (launcher) -->
        <activity
            android:name=".MusicaActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Activity da ENT1: cadastro (fica no projeto mas não é usada) -->
        <activity
            android:name=".PessoaActivity"
            android:exported="false" />
    </application>

</manifest>