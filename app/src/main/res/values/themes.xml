<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DoReMix" parent="Theme.Material3.Light">
        <!-- Primárias -->
        <item name="colorPrimary">@color/Primaria_roxo_Light</item>
        <item name="colorPrimaryVariant">@color/variante_Roxo_Light</item>
        <item name="colorOnPrimary">@color/primario_texto_light</item>

        <!-- Secundária -->
        <item name="colorSecondary">@color/secundario_rosa_Light</item>
        <item name="colorOnSecondary">@color/secundario_texto_light</item>

        <!-- Fundo e superfície -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/superficie_light</item>

        <!-- Texto -->
        <item name="android:textColorPrimary">@color/primario_texto_light</item>
        <item name="android:textColorSecondary">@color/secundario_texto_light</item>

        <!-- Extra -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/variante_Roxo_Light</item>
    </style>
</resources>